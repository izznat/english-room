{
	"name": "english-room",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "wrangler deploy",
		"prepare": "svelte-kit sync && wrangler types",
		"check": "svelte-kit sync && wrangler types && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && wrangler types && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e",
		"create:exercise": "node --env-file .env ./scripts/create-exercise.ts"
	},
	"dependencies": {
		"@neoconfetti/svelte": "^2.2.2",
		"es-toolkit": "^1.37.2",
		"melt": "^0.30.1",
		"openai": "^4.97.0",
		"uuid": "^11.1.0",
		"zod": "4.0.0-beta.20250420T053007"
	},
	"devDependencies": {
		"@clack/prompts": "^0.10.1",
		"@playwright/test": "^1.49.1",
		"@radix-ui/colors": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^7.0.2",
		"@sveltejs/kit": "^2.20.8",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.1.5",
		"@types/node": "^22.15.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.7",
		"tailwindcss": "^4.1.5",
		"typescript": "^5.0.0",
		"vite": "^6.3.4",
		"wrangler": "^4.14.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"workerd",
			"sharp"
		]
	}
}
